#!/usr/bin/env bash

DIR="$HOME/Documents/Notes"
mkdir -p "$DIR"

# Choose terminal dynamically
term="${TERMINAL:-st}"
if ! command -v "$term" >/dev/null 2>&1; then
    term=$(command -v kitty || command -v alacritty || command -v wezterm || command -v xterm)
fi

# bemenu configuration
bemenu_CMD="${HOME}/.local/bin/bemenu/bm-run"
bemenu_OPTS="-c -i -l 15"

# Get list of .md files
entries=$(find "$DIR" -maxdepth 1 -type f -name "*.md" -printf "%f\n" | sort)

# Add create and delete options
options=$(echo -e "Create New Note\nDelete Note\n$entries")

# Launch bemenu
selection=$(echo -e "$options" | ${bemenu_CMD} ${bemenu_OPTS})

[ -z "$selection" ] && exit

if [[ "$selection" == "Create New Note" ]]; then
    new_name=$(echo "" | ${bemenu_CMD} -p "New note name (no .md):")
    [ -z "$new_name" ] && exit
    file="$DIR/$new_name.md"
    [ -e "$file" ] || touch "$file"
    "$term" -e nvim "$file" &
    exit
fi

if [[ "$selection" == "Delete Note" ]]; then
    delete_target=$(find "$DIR" -maxdepth 1 -type f -name "*.md" -printf "%f\n" | sort | ${bemenu_CMD} ${bemenu_OPTS})
    [ -z "$delete_target" ] && exit
    rm -f "$DIR/$delete_target"
    echo "Deleted: $delete_target" | ${bemenu_CMD} -i -l 2 -p "Success"
    exit
fi

# Open selected note
"$term" -e nvim "$DIR/$selection" &
