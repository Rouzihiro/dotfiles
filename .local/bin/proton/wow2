#!/usr/bin/env bash
# wow-asahi-gpu-fix

export WINEPREFIX="$HOME/.wine" 
export WINEARCH=win64
export WINEDEBUG=-all

# Force basic GPU detection
export vblank_mode=0
export __GL_SYNC_TO_VBLANK=0

# Tell Wine to use basic display
export SDL_VIDEODRIVER=x11

echo "ðŸŽ® Launching WoW with Asahi GPU workaround..."

wine "$HOME/Games/Frostmourne/Wow.exe" -windowed $@
