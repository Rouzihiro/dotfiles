#!/bin/bash

if [[ -z "$1" && "$1" != "CNCLD" ]]; then
  echo "Usage: zorro-theme-set <theme-name>" >&2
  exit 1
fi

THEMES_DIR="$HOME/.config/zorro/themes/"
CURRENT_THEME_DIR="$HOME/.config/zorro/current/theme"

THEME_NAME=$(echo "$1" | sed -E 's/<[^>]+>//g' | tr '[:upper:]' '[:lower:]' | tr ' ' '-')
THEME_PATH="$THEMES_DIR/$THEME_NAME"

# Check if the theme entered exists
if [[ ! -d "$THEME_PATH" ]]; then
  echo "Theme '$THEME_NAME' does not exist in $THEMES_DIR" >&2
  exit 2
fi

# Update theme symlinks
ln -nsf "$THEME_PATH" "$CURRENT_THEME_DIR"

# Change background with theme
zorro-theme-bg-next

# Restart components to apply new theme
# zorro-restart-waybar
# zorro-restart-swayosd
# hyprctl reload
pkill -SIGUSR2 btop
# makoctl reload

# Change gnome, terminal, etc. themes
#zorro-theme-set-terminal
#zorro-theme-set-gnome
