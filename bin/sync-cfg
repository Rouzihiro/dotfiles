#!/bin/bash

# Sync all dotfiles to ~/dotfiles/linux/

# --- 1. Sync .config ---
echo "ðŸ”„ Syncing ~/.config/..."
rsync -av --delete \
    --exclude='BraveSoftware' \
    --exclude='Cache' \
    --exclude='Trash' \
    --exclude='Spotify' \
    --exclude='discord' \
    "$HOME/.config/" "$HOME/dotfiles/linux/.config"

# --- 2. Sync shell files ---
SHELL_TARGET="$HOME/dotfiles/linux/shell"
mkdir -p "$SHELL_TARGET"

# Individual files to sync
echo "ðŸ”„ Syncing shell dotfiles..."
while IFS= read -r file; do
    [ -f "$HOME/$file" ] && rsync -av "$HOME/$file" "$SHELL_TARGET/" && echo "  âœ“ $file"
done <<EOF
.bashrc
.bash_profile
.bash_logout
.zshrc
.zprofile
.profile
.bash_aliases
.gitconfig
EOF

# --- 3. Sync ~/.shell/ to ~/dotfiles/linux/shell/shell/ ---
if [ -d "$HOME/.shell" ]; then
    echo "ðŸ”„ Syncing ~/.shell/..."
    rsync -av --delete "$HOME/.shell/" "$SHELL_TARGET/shell/"
    echo "  âœ“ .shell/ â†’ shell/shell/"
else
    echo "  âš ï¸  ~/.shell/ not found, skipping..."
fi

# --- 4. Sync ~/scripts/ to ~/dotfiles/linux/scripts/ ---
SCRIPTS_TARGET="$HOME/dotfiles/linux/scripts"
if [ -d "$HOME/scripts" ]; then
    echo "ðŸ”„ Syncing ~/scripts/ to ~/dotfiles/linux/scripts/..."
    rsync -av --delete "$HOME/scripts/" "$SCRIPTS_TARGET/"
    echo "  âœ“ ~/scripts/ â†’ linux/scripts/"

    # Reverse sync to capture any new files added to ~/dotfiles/linux/scripts/
    echo "ðŸ”„ Reverse syncing ~/dotfiles/linux/scripts/ to ~/scripts/..."
    rsync -av --ignore-existing "$SCRIPTS_TARGET/" "$HOME/scripts/"
    echo "  âœ“ linux/scripts/ â†’ ~/scripts/"
else
    echo "  âš ï¸  ~/scripts/ not found, skipping..."
fi

# --- 5. Skip sensitive files ---
echo "â­ï¸  Skipped (sensitive): .bash_history, .zsh_history"

echo -e "\nâœ… Done! Dotfiles synced to: $HOME/dotfiles/linux/"

