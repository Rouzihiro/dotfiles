#!/bin/bash

# Sync all dotfiles to ~/dotfiles/

# --- 1. Sync .config ---
echo "ðŸ”„ Syncing ~/.config/..."
rsync -av --delete \
    --exclude='BraveSoftware' \
    --exclude='Cache' \
    --exclude='Trash' \
    --exclude='Spotify' \
    --exclude='discord' \
    "$HOME/.config/" "$HOME/dotfiles/.config/"

# --- 2. Sync shell files directly to ~/dotfiles/ ---
DOTFILES_TARGET="$HOME/dotfiles"
mkdir -p "$DOTFILES_TARGET"

# Individual files to sync
echo "ðŸ”„ Syncing shell dotfiles..."
while IFS= read -r file; do
    [ -f "$HOME/$file" ] && rsync -av "$HOME/$file" "$DOTFILES_TARGET/" && echo "  âœ“ $file"
done <<EOF
.bashrc
.bash_profile
.bash_logout
.zshrc
.zprofile
.aliases
.mbsyncrc
.msmtprc
.gitconfig
EOF

# --- 3. Sync ~/bin/ to ~/dotfiles/bin/ ---
BIN_TARGET="$HOME/dotfiles/bin"
if [ -d "$HOME/bin" ]; then
    echo "ðŸ”„ Syncing ~/bin/ to ~/dotfiles/bin/..."
    mkdir -p "$BIN_TARGET"
    rsync -av --delete "$HOME/bin/" "$BIN_TARGET/"
    echo "  âœ“ ~/bin/ â†’ bin/"
else
    echo "  âš ï¸  ~/bin/ not found, skipping..."
fi

echo -e "\nâœ… Done! Dotfiles synced to: $HOME/dotfiles/"
