#!/bin/sh

SESSION_NAME="rey-docs"

# Check if the session already exists
if ! tmux has-session -t "$SESSION_NAME" 2>/dev/null; then
    export DOCS_DIRECTORY="$HOME/dotfiles/home/docs"
    mkdir -p "$DOCS_DIRECTORY/tasks"

    # Create base session
    tmux new-session -d -s "$SESSION_NAME" -c "$DOCS_DIRECTORY"

    # Window 1: vifm (top 70%) and terminal (bottom 30%)
    tmux rename-window -t "$SESSION_NAME":1 'main'
    tmux send-keys -t "$SESSION_NAME":1 "vifm" C-m
    tmux split-window -v -t "$SESSION_NAME":1
    tmux resize-pane -D 15
    tmux send-keys -t "$SESSION_NAME":1.2 "cd ~/dotfiles; clear" C-m

    # Window 2: just one pane with nvim inside ~/.config
    tmux new-window -t "$SESSION_NAME":2 -c "$HOME/.config" -n "nvim"
		tmux send-keys -t "$SESSION_NAME":2 "nvim -c 'Oil'" C-m

    # Final attach
    tmux select-window -t "$SESSION_NAME":1
fi

# Attach to the session
tmux attach -t "$SESSION_NAME"

