@import "colors.rasi"

* {
  spacing:       0.1em;
  padding:       0.2em;
  margin:        0px;
  border-radius: 0.5em;
  background-color: transparent;
  text-color: @on-surface;
  font: "JetBrainsMono Nerd Font 12";
}

window {
  width: 50%;  /* Wider for better text readability */
  orientation: vertical;
  location: center; 
  anchor: center;  
  x-offset: 0px;
  y-offset: 0px;
  margin: 0px;
  padding: 0px;
  border: 2px;
  border-color: @primary;
  border-radius: 0.5em;
  spacing: 0.1em;
  children: [ mainbox ];
  background-color: @surface;
}

mainbox {
  spacing: 0.1em;
  children: [ inputbar, mode-switcher, listview ];
  background-color: @surface;
  padding: 0px;
}

/* Make inputbar invisible but functional */
inputbar {
  spacing: 0.1em;
  padding: 0px;
  margin: 0px;
  children: [ textbox-prompt-colon, entry ];
  background-color: transparent;
  border-radius: 0px;
  border: 0px;
  height: 0px;
}

textbox-prompt-colon {
  expand: false;
  padding: 0px;
  margin: 0px;
  border-radius: 0px;
  str: "";
  background-color: transparent;
  text-color: transparent;
  font: "JetBrainsMono Nerd Font Bold 0";
}

entry {
  placeholder: "";
  placeholder-color: transparent;
  padding: 0px;
  margin: 0px;
  border-radius: 0px;
  background-color: transparent;
  text-color: transparent;
  font: "JetBrainsMono Nerd Font Bold 0";
}

mode-switcher {
  spacing: 0.1em;
  orientation: horizontal;
  background-color: @surface-container-high;
  padding: 6px 12px;  /* Reduced padding */
  border-radius: 0.5em 0.5em 0px 0px;
}

button {
  padding: 6px 12px;
  border-radius: 0.5em;
  background-color: transparent;
  text-color: @on-surface;
  font: "JetBrainsMono Nerd Font 12"; 
}

button selected {
  background-color: @primary-container;
  text-color: @on-primary-container;
}

listview {
  lines: 15;
  columns: 1;
  spacing: 1px;
  scrollbar: true;
  cycle: true;
  dynamic: true;
  fixed-height: false;
  margin: 0px;
  padding: 4px 0px;
  border: 0px;
  border-radius: 0px 0px 0.5em 0.5em;
  background-color: @surface;
}

element {
  border: 0px;
  border-radius: 0px;
  padding: 4px 12px;
  spacing: 8px;    
  orientation: horizontal;
  vertical-align: 0.5;
  background-color: transparent;
  text-color: @on-surface;
  font: "JetBrainsMono Nerd Font 12";
}

element normal.normal {
  background-color: transparent;
  text-color: @on-surface;
}

element normal.active {
  background-color: @surface-container-high;
  text-color: @on-surface;
}

element selected.normal {
  background-color: @primary;
  text-color: @on-primary;
}

element selected.active {
  background-color: @primary;
  text-color: @on-primary;
}

element alternate.normal {
  background-color: transparent;
  text-color: @on-surface;
}

element alternate.active {
  background-color: @surface-container-high;
  text-color: @on-surface;
}

element-text {
  background-color: transparent;
  text-color: inherit;
  vertical-align: 0.5;
  horizontal-align: 0.0;
  font: "JetBrainsMono Nerd Font 12";
}

element-icon {
  background-color: transparent;
  size: 14px; 
  padding: 0px 3px 0px 0px;
}

scrollbar {
  width: 4px;
  background-color: @surface-container;
  handle-color: @primary-container;
  handle-width: 4px;
  border-radius: 2px;
}
