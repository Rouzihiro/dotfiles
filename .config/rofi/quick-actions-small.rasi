@import "colors.rasi"

configuration {
    show-icons: false;
    font: "JetBrainsMono Nerd Font 12";
}

* {
    background-color: transparent;
    text-color: @foreground;
}

window {
    background-color: @sigbg;  /* Softer dark background */
    border: 2px solid;
    border-color: @sig1;      /* Warm golden border */
    border-radius: 12px;
    padding: 12px;
    width: 400px;
    location: north east;
    anchor: north east;
    x-offset: -20;
    y-offset: 20;
}

mainbox {
    background-color: transparent;
    children: [ listview ];
    spacing: 16px;
}

listview {
    background-color: transparent;
    columns: 3;
    lines: 4;
    spacing: 12px;
    scrollbar: false;
    fixed-height: true;
    border: 0;
}

element {
    background-color: @sigbg;
    text-color: @foreground;
    border-radius: 12px;
    padding: 16px 20px;
    spacing: 12px;
    orientation: horizontal;
}

element-text {
    horizontal-align: 0.0;
    vertical-align: 0.5;
    text-color: inherit;
}

element selected {
    background-color: @sig1;  /* Same golden color as border */
    text-color: @sigbg;        /* Dark text for readability */
}

element selected.active {
    background-color: @sig1;  /* Consistent golden color */
    text-color: @sigbg;        /* Dark text for readability */
}

element-text selected {
    text-color: inherit;
}
