@import "colors.rasi"

configuration {
    show-icons: true;
    icon-theme: "Numix-Circle";
    font: "JetBrainsMono Nerd Font 11";
}

* {
    background-color: transparent;
    text-color: @foreground;
}

window {
    background-color: @color0;  /* Softer dark background */
    border: 2px solid;
    border-color: @color3;      /* Warm golden border instead of bright orange */
    border-radius: 12px;
    padding: 12px;
    width: 700px;
}

mainbox {
    background-color: transparent;
    children: [ inputbar, listview ];
    spacing: 12px;
}

inputbar {
    background-color: @color0;
    border-radius: 8px;
    padding: 8px 12px;
    children: [ prompt, entry ];
    spacing: 8px;
}

prompt {
    text-color: @color3;        /* Golden prompt for hierarchy */
    font: "JetBrainsMono Nerd Font Bold 12";
}

entry {
    placeholder: "Search...";
    placeholder-color: @color0;
    text-color: @foreground;
}

listview {
    background-color: transparent;
    columns: 4;
    lines: 3;
    spacing: 6px;
    scrollbar: false;
    fixed-height: false;
    border: 0;
}

element {
    background-color: @color0;
    text-color: @foreground;
    border-radius: 8px;
    padding: 8px 8px;
    spacing: 8px;
    orientation: vertical;
    children: [ element-icon, element-text ];
}

element-icon {
    size: 96px;
    horizontal-align: 0.5;
}

element-text {
    horizontal-align: 0.5;
    text-color: inherit;
}

element selected {
    background-color: @color3;  /* Calm blue instead of bright orange */
    text-color: @color0;       /* Light text for contrast */
}

element selected.active {
    background-color: @color3;  /* Golden active state */
    text-color: @color0;        /* Dark text for readability */
}

element-text selected {
    text-color: inherit;
}
