bindsym $mod+mod1+n exec "rofi-notes"

# bindsym $mod+c exec "$HOME/scripts/colorpicker"
bindsym $mod+mod1+Tab exec "wall-random"
bindsym $mod+grave exec "list-sway-window"
bindsym $mod+mod1+p exec "rofi-power"
bindsym $mod+mod1+w exec "rofi-wall"
# bindsym $mod+mod1+b exec "rofi-bluetooth"
