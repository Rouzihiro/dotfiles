bindsym $mod+Escape exec rofi-power

bindsym $mod+Return exec $term
bindsym $mod+mod1+Return exec $term2
bindsym $mod+Shift+Return exec $term2

bindsym $mod+space exec $launcher
bindsym $mod+mod1+space exec quick-actions
bindsym $mod+mod1+shift+space exec rofi-scripts

bindsym $mod+a exec $term -e btop
bindsym $mod+Mod1+a exec $term -e ncdu

bindsym $mod+b exec rofi-bookmarks
bindsym $mod+Mod1+b exec xdg-open https://
bindsym $mod+Shift+b exec rofi-bluetooth

bindsym $mod+d exec rofi-aria
bindsym $mod+Mod1+d exec rofi-docs
bindsym $mod+Shift+d exec bm-music-downloader

bindsym $mod+e exec $fm
bindsym $mod+Mod1+e exec $tfm
bindsym $mod+Shift+e exec $files

bindsym $mod+f fullscreen
bindsym $mod+Shift+f floating toggle

bindsym $mod+mod1+h exec $term -T 'floaty-small' -e bash -c 'cd / && sudo ncdu'

bindsym $mod+i exec rofi-wifi
bindsym $mod+mod1+i exec bm-wifi

bindsym $mod+mod1+l exec $lockscreen

bindsym $mod+m exec rofi-mount-usb
bindsym $mod+mod1+m exec $term -T 'floaty-small' -e bash -c 'sudo ps_mem; echo ""; read -rp "Press Enter to close..."'

bindsym $mod+n exec rofi-notes
bindsym $mod+mod1+n exec bm-notes
bindsym $mod+Shift+n exec $editor

bindsym $mod+o exec ocr
bindsym $mod+mod1+o exec sh -c text-picker

bindsym $mod+p scratchpad show
bindsym $mod+mod1+p exec rofi-power-profile
bindsym $mod+Shift+p floating enable, resize set width 1800 height 1000, move scratchpad

bindsym $mod+q kill
bindsym $mod+Ctrl+q exec swaymsg exit

bindsym $mod+r exec $term --app-id=runner_floating -e runner
bindsym $mod+mod1+r exec rofi-screenrecord
bindsym $mod+Shift+r reload

bindsym $mod+s exec rofi-screenshot
bindsym $mod+mod1+s exec rofi-screenshot-fs

bindsym $mod+t exec rofi-theme-set
bindsym $mod+mod1+t exec rofi-timewarrior

bindsym $mod+v exec rofi-videos-list
bindsym $mod+Mod1+v exec rofi-video-tool

bindsym $mod+w exec rofi-wall
bindsym $mod+mod1+w exec wall-random

bindsym $mod+z exec z-menu-keybindings-sway-soft

bindsym $mod+grave exec list-sway-window
