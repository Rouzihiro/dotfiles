# Custom scripts

bindsym $mod+space exec /usr/bin/bemenu -l 17
bindsym $mod+mod1+space exec /usr/bin/bemenu-desktop

# System monitoring
bindsym $mod+a exec $term -e btop
bindsym $mod+Mod1+a exec $ncdu

bindsym $mod+b exec bm-bookmarks
bindsym $mod+Mod1+b exec xdg-open https://

# Downloads / documents
bindsym $mod+d exec bm-aria
bindsym $mod+Mod1+d exec bm-music-downloader
bindsym $mod+Shift+d exec bm-list-docs

bindsym $mod+r exec $term --app-id=runner_floating -e runner

bindsym $mod+mod1+h exec $term -T 'floaty-small' -e bash -c 'cd / && sudo ncdu'
bindsym $mod+mod1+m exec $term -T 'floaty-small' -e bash -c 'sudo ps_mem; echo ""; read -rp "Press Enter to close..."'

bindsym $mod+i exec bm-wifi

set $lockscreen swaylock -i ~/Pictures/lockscreen/VIM.png
bindsym $mod+mod1+l exec $lockscreen

bindsym $mod+Escape exec $term -e btop

# Time tracking
bindsym $mod+t exec bm-timewarrior

# Videos / media
bindsym $mod+v exec bm-list-videos
bindsym $mod+Mod1+v exec bm-video-tool

