### Set variables
set $mod Mod4
set $opacity 0.9
set $term foot
set $launcher rofi -show drun
set $browser librewolf
set $fileManager thunar
set $TfileManager $term -e vifm
set $editor $term -e nvim

output * bg ~/Pictures/wallpapers/konoha1.jpg fill

### Keybindings
bindsym $mod+Return exec $term
bindsym $mod+d exec $launcher
bindsym $mod+n exec $editor
bindsym $mod+e exec $TfileManager
bindsym $mod+b exec $browser
bindsym $mod+Shift+r reload
bindsym $mod+q kill
bindsym $mod+Ctrl+q exec swaymsg exit

# Layout
bindsym $mod+f fullscreen
bindsym $mod+Shift+f floating toggle
bindsym $mod+a focus parent

### Mode: vm_mode
mode "vm_mode" {
  bindsym $mod+i exec ~/.config/sway/scripts/vm-mode-left.sh
}
bindsym $mod+i exec ~/.config/sway/scripts/vm-mode-enter.sh

include ~/.config/sway/config.d/*
