### Mode: vm_mode
mode "vm_mode" {
  bindsym $mod+Shift+i exec ~/.config/sway/scripts/vm-mode-left.sh
}
bindsym $mod+Shift+i exec ~/.config/sway/scripts/vm-mode-enter.sh

include ~/.config/sway/config.d/*
