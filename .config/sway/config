### Set variables
set $mod Mod4
set $opacity 0.9
set $term foot
set $launcher rofi -show drun
set $browser firefox
set $fileManager thunar
set $TfileManager $term -e vifm
set $editor $term -e nvim

### Opacity settings
for_window [app_id="foot"] opacity $opacity
for_window [title="^JDownloader.*"] opacity 0.8
for_window [app_id="runner_floating"] floating enable, move position center, move scratchpad
for_window [title="^Wow-SF-64.exe - Wine Desktop$"] floating enable, move position center
for_window [title="^Wow-SF.exe - Wine Desktop$"] floating enable, move position center

### Input devices
input type:keyboard {
    xkb_layout us,de
	xkb_options grp:alt_shift_toggle
}

input type:touchpad {
    dwt enabled
    tap enabled
    pointer_accel 1
    accel_profile flat
    natural_scroll enabled
}

input type:mouse {
    pointer_accel 0.4
    accel_profile flat
}

### Window rules
for_window [app_id=".*"] inhibit_idle fullscreen

### Gaps and borders
gaps inner 5
gaps outer 2
default_border pixel 2
default_floating_border pixel 2

### Floating windows
floating_modifier $mod
for_window [app_id="^com.saivert.pwvucontrol$"] floating enable

### Assign applications to workspaces
assign [app_id="^librewolf$"] workspace number 1
assign [app_id="firefox"] workspace number 2
assign [title="^JDownloader.*"] workspace number 4

output * bg ~/Pictures/wallpapers/konoha1.jpg fill

### Startup programs
exec foot --server
exec autotiling-rs
exec dunst
exec waybar
exec swayidle -w \
    before-sleep "swaylock -fF" \
    timeout 90 'if ! pgrep -x "motrix"; then brightnessctl -s set 0; fi' \
      resume 'brightnessctl -r' \
    timeout 900 'if ! pgrep -x "motrix"; then systemctl suspend; fi' \
    timeout 1800 'if ! pgrep -x "motrix"; then systemctl poweroff; fi'

