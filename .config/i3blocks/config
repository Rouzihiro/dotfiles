#
[volume]
command=wpctl get-volume @DEFAULT_AUDIO_SINK@ | awk '{if ($3 == "[MUTED]") print "MUTED"; else print int($2 * 100) " %"}'
interval=1
label=   

# [pavucontrol]
# full_text= 
# command=pavucontrol
#
# [volume-pulseaudio]
# command=~/bin/bar/volume
# instance=Master
# interval=1
#
# [simple-2]
# full_text=" "
[power-profile]
command=~/bin/bar/power-wrapper
interval=5
signal=10

[brightness]
command=brightnessctl g | awk '{print $1}'
interval=5
color=#ffa066
label=   

[time]
#label= 
command=date '+%a %d %b %H:%M:%S'
interval=1
min_width=170
align=center

[keymap]
command=~/bin/bar/kb-layout
interval=2

[battery]
#command=cat /sys/class/power_supply/BAT0/capacity | awk '{print $1" %"}'
command=cat /sys/class/power_supply/macsmc-battery/capacity | awk '{print $1" %"}' 
interval=30
color=#7fb4ca
separator=true
align=center
label=   

[shutdown_menu]
full_text= 
command=~/.config/i3blocks/scripts/powermenu
