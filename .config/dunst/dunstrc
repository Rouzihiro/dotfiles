# Minimal Dunst config (Nightfox-inspired)
[global]
monitor = 0
follow = mouse
origin = top-right
offset = (18, 40)
layer = top
width = (0, 300)
corner_radius = 6
padding = 8
horizontal_padding = 8
frame_width = 2
font = Sans Serif Medium 12
format = "<span weight='bold' font='12'>%s</span>\n%b"
alignment = left
vertical_alignment = center
line_height = 0
word_wrap = yes
ellipsize = middle
stack_duplicates = true
hide_duplicate_count = false
icon_position = left
min_icon_size = 28
max_icon_size = 36
icon_path = $HOME/.local/share/icons/dunst
sticky_history = yes
history_length = 20
always_run_script = true
mouse_left_click = do_action, close_current
mouse_middle_click = do_action, close_current
mouse_right_click = close_all

[experimental]
per_monitor_dpi = false

[urgency_low]
background = "#19233088"
foreground = "#cdcecf"
highlight = "#719cd6"
frame_color = "#63cdcf88"
timeout = 7

[urgency_normal]
default_icon = "$HOME/.local/share/icons/dunst/info.png"
background = "#2b3b5196"
foreground = "#cdcecf"
highlight = "#84cee4"
frame_color = "#63cdcfba"
timeout = 20

[urgency_critical]
default_icon = "$HOME/.local/share/icons/dunst/caution.png"
background = "#2b3b519D"
foreground = "#c94f6d"
highlight = "#f4a261ee"
frame_color = "#f4a2616f"
timeout = 1000

# App-specific notifications
[play_sound]
msg_urgency = "normal"
script = ~/.local/bin/sound-alert

