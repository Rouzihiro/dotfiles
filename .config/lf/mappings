# vim:ft=conf
# Remove some default keybindings
clearmaps # Clears all mappings except :

# Arrow keys navigation
map <up> up
map <down> down
map <left> updir
map <right> open
map n :nvim<cr>
map o :context
#map i :image-ops
map t touch
map i togglepreview 

map q quit
map k up
map j down
map h updir
map l open
map gg top
map G bottom
map K :updir; up; open
map J :updir; down; open
map x cut
map y copy
map Y copyToClipboard
map yp :yankPath
map yn :yankFilename
map yd :yankDirname
map p :paste; clear
map P :pasteAsync
map L link
map v invert
map ] jump-next
map [ jump-prev
map f search
map F :fzfJump
map / search
map e $$f # Execute the selected file, must be executable
map s $$SHELL
map c rename
map C bulkRename
map O &xdg-open $f
# map L lfrc
# map M newDir
map M :push %mkdir<space>
map | :set ratios 1:2
# map ` shell
# map ` selectRandom
map ; find-next
map , find-prev
map \% shell-pipe
map \! shell-wait
map \& shell-async
map \$ shell
map \' !true
map \\ :calcdirsize; down;

map <a-j> :push 5j
map <a-k> :push 5k
map <c-d> half-down
map <c-u> half-up
map <c-n> search-next
map <c-p> search-prev
map <c-r> :reload; redraw
map <c-c> :sourceConfig
map <c-f> :fzfSearch

map <enter> open
map <esc> unselect
map <delete> delete
map <backspace2> clear
map <space> :toggle; down

map mp chmod #use 664, 777 notation rather than u+x
map md mkdir
# map mf mkfile
map T mkfile
map mc mark-save
map mx chmodx
map ua unarchive
map bg setWallpaper
map du directorySize # Requires dua-cli utility
map dg dragAndDrop
map dd $trash-put $fx
map D $rm -rf -- $fx

map zh set hidden!
map zr set reverse!
map zn set info
map zs set info size
map zt set info time
map za set info size:time
map sn :set sortby natural; set info
map ss :set sortby size; set info size
map st :set sortby time; set info time
map sa :set sortby atime; set info atime
map sc :set sortby ctime; set info ctime
map se :set sortby ext; set info

# Bookmark Bindings
map gh cd ~ # This is default
map gr cd /
map gw cd ~/Documents/
map gd cd ~/Downloads/
map gc cd ~/.config/
map gp cd ~/Pictures/
map gt cd ~/.trash/
map ga cd ~/Android/
map gb cd ~/bin/
map gf cd ~/dotfiles/
map gg cd ~/Games/
map gl cd ~/.local/
map gu cd ~/mount/usb/
