# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#c6bef1" },

    # Media
    { mime = "{audio,video}/*", fg = "#31748f" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#e0def4" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#e0def4" },

    # Special files
    { name = "*", is = "orphan", bg = "#eb6f92" },
    { name = "*", is = "exec", fg = "#e0def4" },

    # Fallback
    { name = "*", fg = "#e0def4" },
    { name = "*/", fg = "#31748f" },
]

# : ]]]
