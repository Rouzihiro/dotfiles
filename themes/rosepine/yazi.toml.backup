# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#e5e1e0" },

    # Media
    { mime = "{audio,video}/*", fg = "#b4637a" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#282828" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#575279" },

    # Special files
    { name = "*", is = "orphan", bg = "#286983" },
    { name = "*", is = "exec", fg = "#282828" },

    # Fallback
    { name = "*", fg = "#575279" },
    { name = "*/", fg = "#b4637a" },
]

# : ]]]
