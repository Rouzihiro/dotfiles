# : ]]]


# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#171515" },

    # Media
    { mime = "{audio,video}/*", fg = "#8ba4b0" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#c5c9c5" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#c5c9c5" },

    # Special files
    { name = "*", is = "orphan", bg = "#c4b28a" },
    { name = "*", is = "exec", fg = "#c5c9c5" },

    # Fallback
    { name = "*", fg = "#c5c9c5" },
    { name = "*/", fg = "#8ba4b0" },
]

# : ]]]
