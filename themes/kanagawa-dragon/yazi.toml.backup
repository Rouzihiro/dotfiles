# : Manager [[[

[mgr]
cwd = { fg = "#c5c9c5" }

# Tab
tab_active = { fg = "#0d0c0c", bg = "#8ba4b0", bold = true }
tab_inactive = { fg = "#c5c9c5", bg = "#a6a69c" }
tab_width = 1

# Find
find_keyword = { fg = "#c4746e", bold = true, italic = true, underline = true }
find_position = { fg = "#c4746e", bold = true, italic = true }

# Marker
marker_copied = { fg = "#c4b28a", bg = "#c4b28a" }
marker_cut = { fg = "#c5c9c5", bg = "#c5c9c5" }
marker_marked = { fg = "#8ba4b0", bg = "#8ba4b0" }
marker_selected = { fg = "#171515", bg = "#171515" }

# Count
count_copied = { fg = "#181616", bg = "#c5c9c5" }
count_cut = { fg = "#181616", bg = "#c5c9c5" }
count_selected = { fg = "#0d0c0c", bg = "#171515" }

# Border
border_symbol = " "
border_style  = { fg = "#8ba4b0" }

# : ]]]


