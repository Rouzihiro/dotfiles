# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#666467" },

    # Media
    { mime = "{audio,video}/*", fg = "#fd6883" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#fbf1c7" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#e6d9db" },

    # Special files
    { name = "*", is = "orphan", bg = "#adda78" },
    { name = "*", is = "exec", fg = "#fbf1c7" },

    # Fallback
    { name = "*", fg = "#e6d9db" },
    { name = "*/", fg = "#fd6883" },
]

# : ]]]
