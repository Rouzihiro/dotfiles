# : ]]]


# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#889abe" },

    # Media
    { mime = "{audio,video}/*", fg = "#81A1C1" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#ECEFF4" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#D8DEE9" },

    # Special files
    { name = "*", is = "orphan", bg = "#A3BE8C" },
    { name = "*", is = "exec", fg = "#ECEFF4" },

    # Fallback
    { name = "*", fg = "#D8DEE9" },
    { name = "*/", fg = "#81A1C1" },
]

# : ]]]
