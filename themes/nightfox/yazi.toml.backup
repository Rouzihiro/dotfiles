# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#666a7a" },

    # Media
    { mime = "{audio,video}/*", fg = "#86abdc" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#e4e4e5" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#cdcecf" },

    # Special files
    { name = "*", is = "orphan", bg = "#81b29a" },
    { name = "*", is = "exec", fg = "#e4e4e5" },

    # Fallback
    { name = "*", fg = "#cdcecf" },
    { name = "*/", fg = "#86abdc" },
]

# : ]]]
