# : ]]]

# : Tabs [[[

[tabs]
active = { fg = "#ffe16b", bold = true, bg = "#121212" }
inactive = { fg = "#c0c0c0", bg = "#121212" }
sep_inner = { open = "[", close = "]" }

# : ]]]


# : Completion [[[

[completion]
border = { fg = "#ffe16b", bg = "#4d4d4d" }

# : ]]]


# : Tasks [[[

[tasks]
border = { fg = "#ffe16b" }
title = {}
hovered = { fg = "#c0c0c0", underline = true }

# : ]]]


# : Which [[[

[which]
cols = 3
mask = { bg = "#4d4d4d" }
cand = { fg = "#ffe16b" }
rest = { fg = "#080808" }
desc = { fg = "#e0e0e0" }
separator = " ‚ñ∂ "
separator_style = { fg = "#e0e0e0" }

# : ]]]


# : Help [[[

[help]
on = { fg = "#e0e0e0" }
run = { fg = "#e0e0e0" }
footer = { fg = "#080808", bg = "#c0c0c0" }

# : ]]]


# : Notify [[[

[notify]
title_info = { fg = "#8a8a8a" }
title_warn = { fg = "#ffe16b" }
title_error = { fg = "#79dcaa" }

# : ]]]


# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#8a8a8a" },

    # Media
    { mime = "{audio,video}/*", fg = "#ffe16b" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#c0c0c0" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#e0e0e0" },

    # Special files
    { name = "*", is = "orphan", bg = "#79dcaa" },
    { name = "*", is = "exec", fg = "#c0c0c0" },

    # Fallback
    { name = "*", fg = "#e0e0e0" },
    { name = "*/", fg = "#ffe16b" },
]

# : ]]]
