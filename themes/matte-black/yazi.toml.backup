progress_error = { fg = "#79dcaa", bg = "#4d4d4d" }

# Permissions
permissions_t = { fg = "#ffe16b" }
permissions_w = { fg = "#8a8a8a" }
permissions_x = { fg = "#79dcaa" }
permissions_r = { fg = "#e0e0e0" }
permissions_s = { fg = "#c0c0c0" }

# : ]]]


# : Select [[[

[select]
border = { fg = "#ffe16b" }
active = { fg = "#8a8a8a", bold = true }

# : ]]]


# : Input [[[

[input]
border = { fg = "#ffe16b" }
