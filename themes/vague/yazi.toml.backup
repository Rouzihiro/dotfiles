# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#acacd9" },

    # Media
    { mime = "{audio,video}/*", fg = "#f3be7c" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#cdcdcd" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#cdcdcd" },

    # Special files
    { name = "*", is = "orphan", bg = "#6e94b2" },
    { name = "*", is = "exec", fg = "#cdcdcd" },

    # Fallback
    { name = "*", fg = "#cdcdcd" },
    { name = "*/", fg = "#f3be7c" },
]

# : ]]]
