# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#6c6461" },

    # Media
    { mime = "{audio,video}/*", fg = "#d79921" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#fbf1c7" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#ebdbb2" },

    # Special files
    { name = "*", is = "orphan", bg = "#98971a" },
    { name = "*", is = "exec", fg = "#fbf1c7" },

    # Fallback
    { name = "*", fg = "#ebdbb2" },
    { name = "*/", fg = "#d79921" },
]

# : ]]]
