# : File-specific styles [[[

[filetype]

rules = [
    # Images
    { mime = "image/*", fg = "#cac9ba" },

    # Media
    { mime = "{audio,video}/*", fg = "#7fb4ca" },

    # Archives
    { mime = "application/{zip,rar,7z*,tar,gzip,xz,zstd,bzip*,lzma,compress,archive,cpio,arj,xar,ms-cab*}", fg = "#dcd7ba" },

    # Documents
    { mime = "application/{pdf,doc,rtf}", fg = "#dcd7ba" },

    # Special files
    { name = "*", is = "orphan", bg = "#c8c093" },
    { name = "*", is = "exec", fg = "#dcd7ba" },

    # Fallback
    { name = "*", fg = "#dcd7ba" },
    { name = "*/", fg = "#7fb4ca" },
]

# : ]]]
